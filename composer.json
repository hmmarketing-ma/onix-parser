{
    "name": "hm-marketing/onix-parser",
    "description": "A modern PHP library for parsing ONIX (ONline Information eXchange) XML files",
    "version": "1.9.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kiran Mohamed",
            "email": "contact@hmmarketing.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "ONIXParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ONIXParser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src",
        "fix-style": "phpcbf src"
    },
    "config": {
        "sort-packages": true
    }
}
